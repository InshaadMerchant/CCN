<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Azureish_White"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:transitionName="layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/college_networking"
            android:id="@+id/transitionimg"
            android:transitionName="college_networking"/>

        <TextView
            android:id="@+id/loginTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_inline"
            android:paddingTop="70dp"
            android:text="@string/tagline"
            android:textAllCaps="true"
            android:textColor="@color/UTA_BLUE"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLayout"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:shadowColor="@color/UTA_BLUE"
                android:textAllCaps="true"
                android:id="@+id/registerbutton"
                android:text="Sign-up" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:id="@+id/loginButton"
                android:shadowColor="@color/UTA_BLUE"
                android:textAllCaps="true"
                android:text="login" />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/guest_usrbtn"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>